---
import type { Letter } from 'letterhouse'

import Article from './Article.astro'
import LetterBlockquote from './LetterBlockquote.astro'
import LetterMeta from './LetterMeta.astro'
import Text from './Text.astro'

export interface Props {
  letter: Letter
}

const { letter } = Astro.props as Props
---

<Article class="letter full">
  <LetterMeta letter={letter} />
  <Text class="body vm-large">
    <letter.Body components={{ blockquote: LetterBlockquote }} />
  </Text>
</Article>
