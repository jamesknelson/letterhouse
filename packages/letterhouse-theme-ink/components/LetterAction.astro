---
import Icon from './Icon.astro'

export interface Props {
  href?: string
  icon: string
  label: string
  type?: string
}

const { icon, href, label, type } = Astro.props
---

{href ? (
  <a href={href} data-type={type}>
    <Icon class="icon" name={icon} />
    {label}
  </a>
) : (
  <button type="button" data-type={type}>
    <Icon class="icon" name={icon} />
    {label}
  </button>
)}

<style>
  a,
  button {
    flex-grow: 1;
    display: flex;
    align-items: center;

    color: rgba(var(--rgb-primary));
    cursor: pointer;

    text-decoration: none;

    background-color: transparent;
    font-family: inherit;
    font-size: inherit;
    color: inherit;
  }
  .icon {
    width: 1.5rem;
    fill: rgba(var(--rgb-primary));
    margin-right: 0.75rem;
  }

  a:hover,
  button:hover {
    color: var(--color-secondary);

    & .icon {
      fill: var(--color-secondary);
    }
  }
</style>
