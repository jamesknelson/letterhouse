---
import type { Letter } from 'letterhouse'

import SiteHead from './SiteHead.astro'

export interface Props {
  letter: Letter
  siteTitle: string
}

const { letter, siteTitle } = Astro.props
---

<SiteHead
  siteTitle={siteTitle}
  title={letter.title ?? `Letter from James, dated ${letter.dated}`}
  description={letter.blurb}
  lightning={letter.authors.length === 1
    ? letter.authors[0].address.lightning
    : undefined}
/>
