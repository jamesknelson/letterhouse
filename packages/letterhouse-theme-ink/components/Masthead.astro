---
export interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<div>
  <h1><a href="/">{title}</a></h1>
</div>

<style>
  div {
    margin: 2rem 0 3.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;

    & h1 {
      display: flex;
      flex-direction: column;
      align-items: center;

      text-align: center;

      font-family: UnifrakturMaguntia, Georgia, 'Times New Roman', Times, serif;
      font-size: 3.5rem;
      line-height: 3.5rem;

      & a {
        color: var(--color-on-bg);
        color: var(--color-primary);
      }
    }

    & p {
      font-size: 1.25rem;
      font-family: Karma;
      font-style: italic;
      line-height: 1.25rem;
      margin: 0.5rem 0;
      opacity: 0.7;

      & span {
        font-size: 2rem;

        &.right {
          position: relative;
          top: 1rem;
        }
      }
    }
  }
</style>
