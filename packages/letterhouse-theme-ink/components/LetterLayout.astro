---
import type { Letter, Site } from 'letterhouse'

import LetterFull from './LetterFull.astro'
import LetterHead from './LetterHead.astro'
import MarginLetterActions from './MarginLetterActions.astro'
import SiteLayout from './SiteLayout.astro'

export interface Props {
  letter: Letter
  site: Site
}

const { letter, site } = Astro.props as Props
---

<SiteLayout>
  <LetterHead letter={letter} slot="head" />
  <LetterFull letter={letter} />
  <MarginLetterActions letter={letter} site={site} slot="margin" />
</SiteLayout>
