---
export interface Props {
  class: string
}

const { class: className = '' } = Astro.props as Props
---

<div class={`Text block ${className}`}>
  <slot />
</div>

<style is:global>
  .Text.block {
    position: relative;

    & .md {
      word-wrap: break-word;
      font-family: Karla;
    }

    /* blurb quote */
    & p.md.blurb {
      color: var(--color-primary);
      font-weight: 600;
      opacity: 0.9;
      margin-top: -0.5rem;
      margin-bottom: 1.5rem;
      padding: 0;
      white-space: pre-line;
      font-size: 1.125rem;
    }

    & h1.md,
    & h2.md,
    & h3.md,
    & h4.md,
    & h5.md,
    & h6.md {
      &,
      * {
        font-family: Karma;
      }
    }

    & strong.md {
      font-weight: bold;
    }

    & em.md {
      font-style: italic;
    }

    & code.md,
    & pre.md {
      /* background-color: var(--color-alt-surface) !important; */
    }

    & code.md {
      /* color: var(--color-on-surface); */
      font-family: monospace;
      font-size: 95%;
      padding: 0.15em;
    }

    & ol.md,
    & ul.md {
      padding-left: 30px;
    }

    & p.md,
    & h1.md,
    & h2.md,
    & h3.md,
    & h4.md,
    & h5.md,
    & h6.md,
    & ul.md,
    & ol.md,
    & img.md,
    & pre.md,
    & hr.md,
    & blockquote.md {
      font-size: 1rem;
      line-height: 1.5rem;
      margin: 1rem 0;
    }

    & img.md {
      display: block;
      max-width: 100%;
      border-radius: 4px;
    }
    & p.md > img.md {
      margin: 0;
    }

    & hr.md {
      left: 33% !important;
      margin: 1.5rem 1rem;
      position: relative;
      width: 33% !important;
      height: 1px;
      background-color: var(--color-surface-line);
    }

    & h1.md,
    & h1.md a.md,
    & h2.md,
    & h2.md a.md {
      color: var(--color-primary);
      font-family: Karma;
    }

    & h1.md {
      font-size: 2rem;
      line-height: 2rem;
      font-weight: 600;
      margin-top: 2rem;
    }

    & h2.md {
      line-height: 1.5rem;
      font-weight: 600;
      font-size: 1.5rem;
      margin-top: 3rem;
    }

    & h3.md {
      font-size: 22px;
      line-height: 2rem;
      font-weight: 600;
    }

    & h4.md,
    & h5.md,
    & h6.md {
      font-size: 20px;
      line-height: 1.5rem;
      font-weight: 600;
      margin-top: 1rem;
    }

    & p.md a.md,
    & li.md a.md {
      color: var(--color-primary);
      text-decoration: underline;

      &:hover {
        color: var(--color-secondary);
      }
    }
  }
</style>
