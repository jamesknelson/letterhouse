---
export interface Props {
  class: string
}

const { class: className = '' } = Astro.props as Props
---

<div class={`Text block ${className}`}>
  <slot />
</div>

<style is:global>
  .Text.block {
    position: relative;

    & * {
      word-wrap: break-word;
      font-family: Karla;
    }

    & blockquote {
      position: relative;
      color: rgba(var(--color-on-surface), var(--opacity-alt));
      margin-top: 2rem;
      margin-bottom: 2rem;
      padding: 0.5rem 1.5rem;

      &::before {
        content: ' ';
        z-index: 0;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        border: 1px solid var(--color-surface-border);
        border-radius: 4px;
      }

      &::after {
        content: 'â€œ';
        position: absolute;
        left: -0.5rem;
        top: 0;
        height: 100%;
        width: 1rem;
        padding-top: 2rem;
        font-size: 3rem;
        text-align: center;
        box-sizing: border-box;
      }

      & > p {
        position: relative;
        z-index: 1;
      }
    }

    /* blurb quote */
    & h1 + blockquote,
    & blockquote:first-child {
      color: var(--color-primary);
      font-weight: 600;
      opacity: 0.9;
      margin-top: -0.5rem;
      margin-bottom: 1.5rem;
      padding: 0;

      &::before,
      &::after {
        display: none;
      }

      & > p {
        margin: 0;
        white-space: pre-line;
        font-size: 1.125rem;
      }
    }

    & h1,
    & h2,
    & h3,
    & h4,
    & h5,
    & h6 {
      &,
      * {
        font-family: Karma;
      }
    }

    & strong {
      font-weight: bold;
    }

    & em {
      font-style: italic;
    }

    & code,
    & pre {
      /* background-color: var(--color-alt-surface) !important; */
    }

    & code {
      /* color: var(--color-on-surface); */
      font-family: monospace;
      font-size: 95%;
      padding: 0.15em;
    }

    & ol,
    & ul {
      padding-left: 30px;
    }

    & p,
    & h1,
    & h2,
    & h3,
    & h4,
    & h5,
    & h6,
    & ul,
    & ol,
    & img,
    & pre,
    & hr,
    & blockquote {
      font-size: 1rem;
      line-height: 1.5rem;
      margin: 1rem 0;
    }

    & img {
      display: block;
      max-width: 100%;
      border-radius: 4px;
    }
    & p > img {
      margin: 0;
    }

    & hr {
      left: 33% !important;
      margin: 1.5rem 1rem;
      position: relative;
      width: 33% !important;
      height: 1px;
      background-color: var(--color-surface-line);
    }

    & h1,
    & h1 a,
    & h2,
    & h2 a {
      color: var(--color-primary);
      font-family: Karma;
    }

    & h1 {
      font-size: 2rem;
      line-height: 2rem;
      font-weight: 600;
      margin-top: 2rem;
    }

    & h2 {
      line-height: 1.5rem;
      font-weight: 600;
      font-size: 1.5rem;
      margin-top: 3rem;
    }

    & h3 {
      font-size: 22px;
      line-height: 2rem;
      font-weight: 600;
    }

    & h4,
    & h5,
    & h6 {
      font-size: 20px;
      line-height: 1.5rem;
      font-weight: 600;
      margin-top: 1rem;
    }

    & p a,
    & li a {
      color: var(--color-primary);
      text-decoration: underline;

      &:hover {
        color: var(--color-secondary);
      }
    }
  }
</style>
